<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_nav_graph"
    app:startDestination="@+id/student_nav_home">

    <fragment
        android:id="@+id/student_nav_home"
        android:name="com.example.volunhub.student.fragments.StudentHomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_student_home" />

    <fragment
        android:id="@+id/student_nav_application"
        android:name="com.example.volunhub.student.fragments.application.StudentApplicationsFragment"
        android:label="My Applications"
        tools:layout="@layout/fragment_student_applications" />

    <fragment
        android:id="@+id/student_nav_profile"
        android:name="com.example.volunhub.student.fragments.StudentProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_student_profile" >

        <action
            android:id="@+id/action_student_profile_to_edit_profile"
            app:destination="@id/student_edit_profile" />
    </fragment>

    <fragment
        android:id="@+id/student_edit_profile"
        android:name="com.example.volunhub.student.fragments.StudentEditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_student_edit_profile" />

</navigation>