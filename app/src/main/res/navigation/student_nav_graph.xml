<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_nav_graph"
    app:startDestination="@+id/student_nav_home">

    <fragment
        android:id="@+id/student_nav_home"
        android:name="com.example.volunhub.student.fragments.StudentHomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_student_home">
        <action
            android:id="@+id/action_home_to_service_detail"
            app:destination="@id/student_service_detail" />
    </fragment>


    <fragment
        android:id="@+id/student_nav_application"
        android:name="com.example.volunhub.student.fragments.application.StudentApplicationsFragment"
        android:label="My Applications"
        tools:layout="@layout/fragment_student_applications">
        <action
            android:id="@+id/action_my_apps_to_service_detail"
            app:destination="@id/student_service_detail" />
    </fragment>

    <fragment
        android:id="@+id/student_nav_profile"
        android:name="com.example.volunhub.student.fragments.StudentProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_student_profile" >

        <action
            android:id="@+id/action_student_profile_to_edit_profile"
            app:destination="@id/student_edit_profile" />
    </fragment>

    <fragment
        android:id="@+id/student_edit_profile"
        android:name="com.example.volunhub.student.fragments.StudentEditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_student_edit_profile" />

    <fragment
        android:id="@+id/student_service_detail"
        android:name="com.example.volunhub.student.fragments.StudentServiceDetailFragment"
        android:label="Service Details"
        tools:layout="@layout/fragment_student_service_detail">

        <argument
            android:name="serviceId"
            app:argType="string" />
        <argument
            android:name="initialStatus"
            app:argType="string"
            android:defaultValue="NOT_APPLIED" />
        <action
            android:id="@+id/action_service_detail_to_view_org_profile"
            app:destination="@id/student_view_org_profile" />
    </fragment>

    <fragment
        android:id="@+id/student_view_org_profile"
        android:name="com.example.volunhub.student.fragments.ViewOrgProfileFragment"
        android:label="Organization Profile"
        tools:layout="@layout/fragment_view_org_profile">

        <argument
            android:name="orgId"
            app:argType="string" />
    </fragment>

</navigation>